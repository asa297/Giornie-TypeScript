{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@server/modules/*": ["modules/*"],
      "@server/config/*": ["config/*"],
      "@server/middleware/*": ["middleware/*"],
      "@server/models/*": ["models/*"]
    },
    "lib": ["dom", "es2018"],
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["**/__tests__/**", "dist", "node_modules"]
}
