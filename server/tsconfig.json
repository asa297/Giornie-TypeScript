{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "modules/*": ["./modules/*"],
      "config/*": ["./config/*"],
      "middleware/*": ["./middleware/*"],
      "models/*": ["./models/*"],
      "services/*": ["./services/*"]
    },
    "lib": ["dom", "es2018"],
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["**/__tests__/**", "dist", "node_modules"]
}
