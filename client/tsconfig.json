{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./*"],
      "@app/store/*": ["./store/*"],
      "@app/route/*": ["./route/*"],
      "@app/page/*": ["./page/*"],
      "@app/util/*": ["./util/*"],
      "@app/helpers/*": ["./helpers/*"],
      "@app/assets/*": ["./assets/*"],
      "@app/components/*": ["./components/*"],
      "@app/static/*": ["./static/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.d.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
